    <style>
      body {
        /* Fondo oscuro estelar */
        background-color: #0b0c10;
      }
      /* Efecto de 'Hover' para la Tarjeta */
      .hover-scale {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      }
      .hover-scale:hover {
        transform: scale(1.01);
        /* Brillo de acento en el hover */
        box-shadow: 0 0.5rem 1rem rgba(255, 193, 7, 0.4) !important;
      }
    </style>
  </head>
  <body>
    <Header client:load />
    <slot />
