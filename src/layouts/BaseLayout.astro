import 'bootstrap/dist/css/bootstrap.min.css';
import { Header } from '../components/Header.jsx';

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="es" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
